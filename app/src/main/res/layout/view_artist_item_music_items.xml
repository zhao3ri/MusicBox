<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_default_list_items"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/default_medium_margin"
    android:paddingLeft="@dimen/default_normal_margin"
    android:paddingRight="@dimen/default_normal_margin"
    android:paddingTop="@dimen/default_medium_margin">

    <ImageView
        android:id="@+id/iv_artist_album_img"
        android:layout_width="@dimen/layout_play_ctrl_img_height"
        android:layout_height="@dimen/layout_play_ctrl_img_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/artist_item_child_margin_left"
        android:layout_marginRight="@dimen/default_medium_margin"
        android:background="@drawable/icon_default_music" />

    <TextView
        android:id="@+id/tv_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_medium_margin"
        android:layout_toLeftOf="@+id/tv_music_duration"
        android:layout_toRightOf="@+id/iv_artist_album_img"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_music_item_title_size" />

    <TextView
        android:id="@+id/tv_music_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_music_title"
        android:layout_marginTop="@dimen/default_medium_margin"
        android:layout_toRightOf="@+id/iv_artist_album_img"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_music_item_artist_size" />

    <TextView
        android:id="@+id/tv_music_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_music_item_duration_size" />

</RelativeLayout>