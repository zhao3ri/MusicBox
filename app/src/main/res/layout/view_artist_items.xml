<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_artist_item"
    android:padding="@dimen/default_medium_margin">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_down_arrow" />

    <ImageView
        android:id="@+id/iv_artist_item_img"
        android:layout_width="@dimen/layout_play_ctrl_img_height"
        android:layout_height="@dimen/layout_play_ctrl_img_height"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_arrow"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_artist_item_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_play_ctrl_img_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_medium_margin"
        android:layout_toRightOf="@+id/iv_artist_item_img"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_artist_item_name_size"
        android:textStyle="bold" />

</RelativeLayout>