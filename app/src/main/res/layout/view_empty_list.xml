<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="@dimen/list_empty_image_width"
        android:layout_height="@dimen/list_empty_image_width"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_empty_music" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_empty"
        android:layout_marginTop="@dimen/default_normal_margin"
        android:layout_centerHorizontal="true"
        android:text="@string/empty_music_list"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_default_size" />

</RelativeLayout>